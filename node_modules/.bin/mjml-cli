#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/mayeul/projects/n8n/node_modules/.pnpm/mjml-cli@4.15.3_encoding@0.1.13/node_modules/mjml-cli/bin/node_modules:/home/mayeul/projects/n8n/node_modules/.pnpm/mjml-cli@4.15.3_encoding@0.1.13/node_modules/mjml-cli/node_modules:/home/mayeul/projects/n8n/node_modules/.pnpm/mjml-cli@4.15.3_encoding@0.1.13/node_modules:/home/mayeul/projects/n8n/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/mayeul/projects/n8n/node_modules/.pnpm/mjml-cli@4.15.3_encoding@0.1.13/node_modules/mjml-cli/bin/node_modules:/home/mayeul/projects/n8n/node_modules/.pnpm/mjml-cli@4.15.3_encoding@0.1.13/node_modules/mjml-cli/node_modules:/home/mayeul/projects/n8n/node_modules/.pnpm/mjml-cli@4.15.3_encoding@0.1.13/node_modules:/home/mayeul/projects/n8n/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../mjml-cli/bin/mjml" "$@"
else
  exec node  "$basedir/../mjml-cli/bin/mjml" "$@"
fi
